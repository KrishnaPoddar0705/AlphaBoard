# =============================================================================
# WhatsApp Bot Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# Meta WhatsApp Cloud API Configuration
# =============================================================================
# Get these from Meta Developer Portal: https://developers.facebook.com/
META_WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
META_WHATSAPP_API_VERSION=v22.0
META_WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
META_WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token_here

# =============================================================================
# Supabase Configuration
# =============================================================================
# Get these from Supabase Dashboard: https://supabase.com/dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =============================================================================
# AlphaBoard Backend API Configuration
# =============================================================================
# Your existing AlphaBoard backend URL
ALPHABOARD_API_BASE_URL=https://your-backend.onrender.com
ALPHABOARD_API_KEY=optional_api_key_if_needed

# =============================================================================
# Market Data API Configuration (Optional)
# =============================================================================
# If using external market data API
MARKET_DATA_API_BASE_URL=
MARKET_DATA_API_KEY=

# =============================================================================
# WhatsApp Template Configuration
# =============================================================================
# Pre-approved WhatsApp template for daily market close messages
# Must be approved in Meta Business Suite before use
WHATSAPP_DAILY_TEMPLATE_NAME=daily_market_close
WHATSAPP_DAILY_TEMPLATE_LANG=en_US

# =============================================================================
# Admin Configuration
# =============================================================================
# Secret key for admin endpoints
ADMIN_API_KEY=your_admin_secret_key_here

# =============================================================================
# Application Configuration
# =============================================================================
# Environment: local, dev, or prod
ENVIRONMENT=local
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8001

